#!/bin/bash

sockets=$(shopt -s nullglob; echo ~/.ssh/cm-*)
if [ "$1" = "" ]
then
    paction=""
elif [ "$1" = "do" ]
then
    paction="pkill"
else
    sockets="$1"
    paction="pkill"
fi

for socket in ${sockets}
do
    echo -n `pgrep -af "ssh:.*${socket}"`" "
    [ -z "${paction}" ] || ${paction} -cf "ssh:.*${socket}" && echo
done

