	local=PREFERENCEDIR
	# shellcheck disable=SC2034
	local=PREFERENCEPATH
	PREFERENCEDIR="${PROFILEPATH}/user_data/Default"
	PREFERENCEPATH="${PREFERENCEDIR}/Preferences"

	mkdir -p "${PREFERENCEDIR}"
	cat >"${PREFERENCEPATH}" <<-EOF
{
