#!/bin/bash

case $HOSTNAME in
    cyberlab)
        xrandr --output VGA-0 --mode 1680x1050
        xrandr --output VGA-0 --primary
        ;;
    goldorak)
        if [ -z "$1" ] 
        then
            action=laptop
        else
            action=$1
        fi
        case $action in
            lvds|lap*)
                xrandr --output LVDS1 --mode 1366x768 --primary --pos 0x0
                xrandr --output LVDS1 --primary
        	    xrandr --output DP1 --off
        	    xrandr --output VGA1 --off
        	    xrandr --output HDMI1 --off
        	    ;;
            dp|acd)
                xrandr --output DP1 --primary --mode 2560x1440 --pos 0x0 
                xrandr --output LVDS1 --off
                xrandr --output DP1 --primary --mode 2560x1440 --pos 0x0 --output LVDS1 --mode 1366x768 --noprimary --pos 2560x0
                xrandr --output DP1 --primary
        	    xrandr --output VGA1 --off
        	    xrandr --output HDMI1 --off
        	    ;;
        	vga)
                xrandr --output LVDS1 --mode 1366x768 --primary --pos 0x0 --output VGA1 --auto --noprimary --pos 1366x0
                xrandr --output LVDS1 --primary
        	    xrandr --output DP1 --off
        	    xrandr --output HDMI1 --off
                ;;
            proj*)
                xrandr --output LVDS1 --auto --primary
                xrandr --output VGA1  --auto --same-as LVDS1
        	    xrandr --output DP1 --off
        	    xrandr --output HDMI1 --off
                ;;
            *)
                echo "$0 [acd|laptop|projector]"
                exit 1
            esac
    esac

# set background
setbg
