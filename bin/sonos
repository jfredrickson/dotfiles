#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail


# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

if [ -z "${1:-}" ]
then
	errexit "missing action parameter(s)"
fi

if checksonos
then
	error=$(socos ${1} "${HOME_LAN_SONOS_IP}" ${2:-} 2>&1)
	if [[ "${error}" =~ "Unknown command" ]]
	then
		errexit "Unknown command '${1}'"
	fi
else
    errexit "Sonos not online"
fi
