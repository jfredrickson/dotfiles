#!/bin/bash

sleep 1 # make sure SSHASKPASS window runs first
launch-screen i3jobs sleep 3

launch-screen i3jobs add setbg-loop
launch-screen i3jobs add compton
launch-screen i3jobs add xautolock -detectsleep -time 7 -locker /home/serge/bin/lock
launch-screen i3jobs add autocutsel -verbose -debug -selection CLIPBOARD
launch-screen i3jobs add autocutsel -verbose -debug -selection PRIMARY
launch-screen i3jobs add mqtt-notify.py
launch-screen i3jobs add mopidy

sleep 3
launch-screen i3jobs add dunst -print

