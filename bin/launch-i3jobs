#!/bin/bash

# make sure SSHASKPASS window runs first
sleep 1

launch_job() {
    echo
    echo -n "Checking for \"$*\" ... "
    if pgrep -f "$*"
    then
        echo Already running.
    else
        launch-screen i3jobs add $*
    fi
    echo; echo "----------------------------------------"
}

launch_job compton
launch_job dunst -print
launch_job xautolock -detectsleep -time 7 -locker /home/serge/bin/lock
launch_job autocutsel -verbose -debug -selection CLIPBOARD
launch_job autocutsel -verbose -debug -selection PRIMARY
launch_job mqtt-notify.py

