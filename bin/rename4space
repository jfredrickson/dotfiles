#!/bin/bash


function rename() {
	file="$1"
	if [ ! -f "$file" ] 
	then
		echo "File '$file' does not exist?"
		exit 1
	fi
	name="$(basename "$file")"
	path="$(dirname  "$file")"
	newname="${name// /_}"
	$echo mv -v "$file" "$path/$newname"
}

if [ y"$1" = ydo ]
then
    shift
else
	echo=echo
fi
rename "$1"
