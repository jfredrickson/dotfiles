#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail


# shellcheck disable=SC1090
source "$HOME/bin/common.bash"
check_debug_logging

args="$*"
FORMAT="${FORMAT:-bash}"

execute_commands()
{
        echo
        export IFS=";"
        for command in ${args}
	    do
            echo \$ $command
            echo
            eval $command
            echo
        done
}

if [ "$(basename $0)" = "execho" ]
then
        execute_commands
        exit 0
elif [ -z "${args}" ]
then
	paste_url=$(/usr/bin/pastebinit -f $FORMAT | tr -d '\n')
else
	output=$(execute_commands 2>&1)
    echo -e "$output"
    echo
	paste_url=$(echo "$output" | /usr/bin/pastebinit -f $FORMAT)
fi

sleep 1
link=$(bitly $paste_url | tr -d '\n')
echo $link

echo $link | tr -d '\n' | xclip -in -selection clipboard
notify_libnotify low "Command pasted at $link" "$paste_url"
