#!/bin/bash

# c-basic-offset: 4; tab-width: 4; indent-tabs-mode: t
# vi: set shiftwidth=4 tabstop=4 noexpandtab:
# :indentSize=4:tabSize=4:noTabs=false:

set -o nounset
set -o errexit
set -o pipefail


# shellcheck disable=SC1090
source "$HOME/bin/common.bash"

notify_debug "starting a terminal with $0"
COMMAND="/usr/bin/terminator --geometry 800x600"

if [ "$(basename $0)" = "terminator-floating" ]
then
	COMMAND="$COMMAND --role floating"
else
	PWD="$(xcwd ||:)"
	[ -z "${PWD}" ] && PWD="$HOME"
	COMMAND="$COMMAND --working-directory=${PWD}"
fi

if ifdebug1
then
	notify_debug "$COMMAND"
	$COMMAND
	notify_debug "finished with rc $?"
else
	exec $COMMAND
fi
